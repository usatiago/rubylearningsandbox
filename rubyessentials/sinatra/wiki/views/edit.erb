<h1>Edit page <%= @title%></h1>

<div>
    <form method="post" action="/<%= @title%>">
    <input type="hidden" name="_method" value="put">
        <fieldset>
            <label for="content">Content</label>
            <textarea rows="10" columns="200" name="content"><%=@content%></textarea>
        </fieldset>
        <input type="submit">
    </form>
</div>